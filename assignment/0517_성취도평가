<link rel="shortcut icon" type="image/x-icon" href="../images/J.png"/>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script type="text/javascript">
//th 값 입력받기
function btn1(){
	
	title = prompt('타이틀 이름은 무엇이쥬?');
	if(title == "" || title == " "){
		alert('제대로 입력하세요~~');
		return false;
	}else{
		alert(title);
		return title;
	}
}

//btn1()에서 입력받은 값 -> 테이블 열, div에 글상자 추가
function btn2(){
	
	btnReturn = btn1();
	
	//버튼1 prompt로 입력받은 값에 따라 열 추가하는 기능은 1번만 가능하게 하는 조건문
	if (btnReturn != false) {
		str = '<th>' + btnReturn + '</th>';
		$(str).appendTo($('thead tr:last'));

		str = '<td></td>';
		$(str).appendTo($('tbody tr'));

		str = '<input type="text"><br>';

		$(str).appendTo($('#unseen'));
				
		$('#unseen :button').appendTo($('#unseen'));
				
	} else {
		return;
	}
}

//div 토글
$(function() {
	$('#add').on('click', function() {
		$('#unseen').toggle();
	})
})

//테이블 행 추가와 div의 입력버튼을 누르면 글상자에 입력한 값이 테이블에 들어가게
function adding(){
	//번호 생성 및 추가
	num = parseInt($('tr:last th').text());
	str = '<tr><th>' + (num+1) + '</th></tr>';
	$(str).appendTo($('tbody'));
	
	//td 행 추가와 동시에 입력값도 넣기
	tds = "";
	$.each($('#unseen input[type="text"]'), function(i, v){
		tds += "<td>" + $(this).val() + "</td>";
	});
	$(tds).appendTo($('tbody tr:last'));
}

function del(){
	input = Number(prompt('삭제할 글 번호 입력', '숫자만 입력!!!!!!!!!!1')); //Number 형변환
	check = isNaN(input);

	//if 타입 비교
	if(check == true){
		alert('숫자 온리!!!! 정상 입력 부탁');
	}else{
		//값 배열에 넣기
		arr = new Array;
		arr = $('tbody tr th').text();
		
		//있는 번호인지 확인하는 조건문
		if(arr.indexOf(input) < 0){
			alert('그런 번호 없어요~~~');
		}else{
			//존재하는 번호일 때
			idx = arr.indexOf(input)+1;
			idx = "tr:nth-child(" + idx + ")";
			$(idx).remove();
		}
	}
}
</script>
