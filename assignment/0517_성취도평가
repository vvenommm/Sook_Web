// 		alert('숫자 온리!!!! 정상 입력 부탁');
// 	}else if(typeof input === "Number"){
		//값 배열에 넣기
		arr = new Array;
		arr = $('tbody tr th').text();
		
		//있는 번호인지
		if(arr.indexOf(input) < 0){
			alert('그런 번호 없어요~~~');
		}else{
			//존재하는 번호일 때
			idx = arr.indexOf(input);
